<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view"
        android:layout_gravity="center"
        android:textSize="32dp"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slice_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/image_button_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_2"/>
        <ImageButton
            android:id="@+id/image_button_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_3"/>
        <ImageButton
            android:id="@+id/image_button_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_5"/>
        <ImageButton
            android:id="@+id/image_button_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_6"/>
        <ImageButton
            android:id="@+id/image_button_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slice_7"/>

    </LinearLayout>


</LinearLayout>