<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_view"
        android:textSize="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_a1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_1"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_2"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_3"
                    android:layout_margin="@dimen/padding_4"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_a1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_4"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_5"
                    android:layout_margin="@dimen/padding_4" />

                <ImageButton
                    android:id="@+id/image_button_a1_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a1_6"
                    android:layout_margin="@dimen/padding_4"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_a2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_1"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_2"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_3"
                    android:layout_margin="@dimen/padding_4"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/image_button_a2_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_4"
                    android:layout_margin="@dimen/padding_4"/>

                <ImageButton
                    android:id="@+id/image_button_a2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_5"
                    android:layout_margin="@dimen/padding_4" />

                <ImageButton
                    android:id="@+id/image_button_a2_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a2_6"
                    android:layout_margin="@dimen/padding_4"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>